---
import BaseLayout from './BaseLayout.astro';
import '../styles/prose.css';

interface RelatedPost {
  slug: string;
  data: {
    title: string;
    description?: string;
    pubDate: Date;
    heroImage?: string;
    category?: string;
  };
}

interface Props {
  title: string;
  description?: string;
  pubDate?: Date;
  updatedDate?: Date;
  heroImage?: string;
  category?: string;
  tags?: string[];
  readingTime?: number;
  slug?: string;
  relatedPosts?: RelatedPost[];
  productName: string;
  productBrand?: string;
  rating?: number;
  price?: string;
  pros?: string[];
  cons?: string[];
  verdict?: string;
  affiliateLink?: string;
}

const {
  title,
  description,
  pubDate,
  updatedDate,
  heroImage,
  category,
  tags,
  readingTime,
  slug,
  relatedPosts = [],
  productName,
  productBrand,
  rating = 4,
  price,
  pros = [],
  cons = [],
  verdict,
  affiliateLink
} = Astro.props;

const formattedPubDate = pubDate ? new Intl.DateTimeFormat('sv-SE', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
}).format(pubDate) : null;

const currentUrl = Astro.url.href;
const encodedUrl = encodeURIComponent(currentUrl);
const encodedTitle = encodeURIComponent(title);

const stars = Array.from({ length: 5 }, (_, i) => i < Math.floor(rating));

const categorySlug = category?.toLowerCase() || '';

const reviewStructuredData = {
  "@context": "https://schema.org",
  "@type": "Review",
  "itemReviewed": {
    "@type": "Product",
    "name": productName,
    "brand": productBrand ? { "@type": "Brand", "name": productBrand } : undefined,
    "image": heroImage ? new URL(heroImage, Astro.site).toString() : undefined
  },
  "reviewRating": {
    "@type": "Rating",
    "ratingValue": rating,
    "bestRating": 5
  },
  "name": title,
  "author": {
    "@type": "Organization",
    "name": "SmartHem.nu"
  },
  "datePublished": pubDate?.toISOString(),
  "reviewBody": description,
  "publisher": {
    "@type": "Organization",
    "name": "SmartHem.nu"
  }
};
---

<BaseLayout title={title} description={description} image={heroImage} type="article">
  <Fragment slot="structured-data">
    <script type="application/ld+json" set:html={JSON.stringify(reviewStructuredData)} />
  </Fragment>

  <nav class="breadcrumbs" aria-label="Breadcrumb">
    <div class="container">
      <ol>
        <li>
          <a href="/">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"/>
            </svg>
            Hem
          </a>
        </li>
        <li><a href="/blog">Guider</a></li>
        {category && (
          <li><a href={`/kategori/${categorySlug}`}>{category}</a></li>
        )}
        <li aria-current="page">{title}</li>
      </ol>
    </div>
  </nav>

  <header class="article-header">
    <div class="container">
      <div class="article-header-content">
        <span class="review-badge">Produktrecension</span>
        <h1 class="article-title">{title}</h1>
        <div class="article-meta">
          {formattedPubDate && (
            <span>
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <rect x="3" y="4" width="18" height="18" rx="2" ry="2"/>
                <line x1="16" y1="2" x2="16" y2="6"/>
                <line x1="8" y1="2" x2="8" y2="6"/>
                <line x1="3" y1="10" x2="21" y2="10"/>
              </svg>
              <time datetime={pubDate?.toISOString()}>{formattedPubDate}</time>
            </span>
          )}
          {readingTime && (
            <span>
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <circle cx="12" cy="12" r="10"/>
                <polyline points="12 6 12 12 16 14"/>
              </svg>
              {readingTime} min läsning
            </span>
          )}
        </div>
      </div>
    </div>
  </header>

  <div class="article-body">
    <article class="article-content">
      {heroImage && (
        <div class="article-hero-image">
          <img src={heroImage} alt={productName} loading="eager" />
        </div>
      )}

      <div class="product-summary">
        <div class="product-summary-header">
          <div class="product-info">
            {productBrand && <span class="product-brand">{productBrand}</span>}
            <h2 class="product-name">{productName}</h2>
          </div>
          <div class="product-rating">
            <div class="stars">
              {stars.map((filled) => (
                <svg
                  viewBox="0 0 24 24"
                  fill={filled ? "currentColor" : "none"}
                  stroke="currentColor"
                  stroke-width="2"
                  class={filled ? "star-filled" : "star-empty"}
                >
                  <polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"/>
                </svg>
              ))}
            </div>
            <span class="rating-number">{rating.toFixed(1)} / 5</span>
          </div>
        </div>

        {price && (
          <div class="product-price">
            <span class="price-label">Pris:</span>
            <span class="price-value">{price}</span>
          </div>
        )}

        <div class="pros-cons">
          {pros.length > 0 && (
            <div class="pros">
              <h3>
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <polyline points="20 6 9 17 4 12"/>
                </svg>
                Fördelar
              </h3>
              <ul>
                {pros.map(pro => <li>{pro}</li>)}
              </ul>
            </div>
          )}
          {cons.length > 0 && (
            <div class="cons">
              <h3>
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <line x1="18" y1="6" x2="6" y2="18"/>
                  <line x1="6" y1="6" x2="18" y2="18"/>
                </svg>
                Nackdelar
              </h3>
              <ul>
                {cons.map(con => <li>{con}</li>)}
              </ul>
            </div>
          )}
        </div>

        {verdict && (
          <div class="verdict">
            <h3>Slutsats</h3>
            <p>{verdict}</p>
          </div>
        )}

        {affiliateLink && (
          <a href={affiliateLink} target="_blank" rel="noopener sponsored" class="buy-button">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <circle cx="9" cy="21" r="1"/>
              <circle cx="20" cy="21" r="1"/>
              <path d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L23 6H6"/>
            </svg>
            Se pris och köp
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="arrow">
              <line x1="5" y1="12" x2="19" y2="12"/>
              <polyline points="12 5 19 12 12 19"/>
            </svg>
          </a>
        )}
      </div>

      <div class="prose">
        <slot />
      </div>

      <div class="share-section">
        <p class="share-label">Dela recensionen</p>
        <div class="share-buttons">
          <a href={`https://www.facebook.com/sharer/sharer.php?u=${encodedUrl}`} target="_blank" rel="noopener noreferrer" class="share-btn share-facebook" aria-label="Dela på Facebook">
            <svg viewBox="0 0 24 24" fill="currentColor"><path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/></svg>
            Facebook
          </a>
          <a href={`https://twitter.com/intent/tweet?url=${encodedUrl}&text=${encodedTitle}`} target="_blank" rel="noopener noreferrer" class="share-btn share-twitter" aria-label="Dela på X">
            <svg viewBox="0 0 24 24" fill="currentColor"><path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/></svg>
            X
          </a>
          <button class="share-btn share-copy" data-url={currentUrl} aria-label="Kopiera länk">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><rect x="9" y="9" width="13" height="13" rx="2" ry="2"/><path d="M5 15H4a2 2 0 0 1-2-2V4a2 2 0 0 1 2-2h9a2 2 0 0 1 2 2v1"/></svg>
            Kopiera
          </button>
        </div>
      </div>

      {tags && tags.length > 0 && (
        <footer class="article-tags">
          {tags.map(tag => (
            <a href={`/tagg/${tag.toLowerCase()}`} class="article-tag">#{tag}</a>
          ))}
        </footer>
      )}
    </article>
  </div>
</BaseLayout>

<style>
  .breadcrumbs {
    background: var(--color-gray-100);
    padding: var(--spacing-3) 0;
  }

  .breadcrumbs ol {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    gap: var(--spacing-2);
    list-style: none;
    padding: 0;
    margin: 0;
    font-size: var(--font-size-sm);
  }

  .breadcrumbs li {
    display: flex;
    align-items: center;
    gap: var(--spacing-2);
    color: var(--color-gray-500);
  }

  .breadcrumbs li:not(:last-child)::after {
    content: '/';
    color: var(--color-gray-400);
  }

  .breadcrumbs a {
    display: flex;
    align-items: center;
    gap: var(--spacing-1);
    color: var(--color-gray-600);
    transition: color var(--transition-fast);
  }

  .breadcrumbs a:hover {
    color: var(--color-primary-600);
  }

  .breadcrumbs svg {
    width: 14px;
    height: 14px;
  }

  .breadcrumbs li[aria-current="page"] {
    color: var(--color-gray-900);
    font-weight: 500;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    max-width: 200px;
  }

  .review-badge {
    display: inline-block;
    padding: var(--spacing-1) var(--spacing-3);
    background: var(--color-accent-500);
    border-radius: var(--radius-full);
    font-size: var(--font-size-xs);
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: var(--spacing-4);
  }

  .product-summary {
    background: linear-gradient(135deg, var(--color-gray-50) 0%, var(--color-primary-50) 100%);
    border: 1px solid var(--color-gray-200);
    border-radius: var(--radius-2xl);
    padding: var(--spacing-6);
    margin-bottom: var(--spacing-8);
  }

  .product-summary-header {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-4);
    margin-bottom: var(--spacing-4);
  }

  @media (min-width: 640px) {
    .product-summary-header {
      flex-direction: row;
      justify-content: space-between;
      align-items: flex-start;
    }
  }

  .product-brand {
    display: block;
    font-size: var(--font-size-sm);
    color: var(--color-gray-500);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: var(--spacing-1);
  }

  .product-name {
    font-size: var(--font-size-xl);
    font-weight: 700;
    color: var(--color-gray-900);
    margin: 0;
  }

  .product-rating {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    gap: var(--spacing-1);
  }

  @media (min-width: 640px) {
    .product-rating {
      align-items: flex-end;
    }
  }

  .stars {
    display: flex;
    gap: 2px;
  }

  .stars svg {
    width: 24px;
    height: 24px;
  }

  .star-filled {
    color: #f59e0b;
  }

  .star-empty {
    color: var(--color-gray-300);
  }

  .rating-number {
    font-size: var(--font-size-sm);
    font-weight: 600;
    color: var(--color-gray-700);
  }

  .product-price {
    padding: var(--spacing-4) 0;
    border-top: 1px solid var(--color-gray-200);
    border-bottom: 1px solid var(--color-gray-200);
    margin-bottom: var(--spacing-4);
  }

  .price-label {
    font-size: var(--font-size-sm);
    color: var(--color-gray-600);
  }

  .price-value {
    font-size: var(--font-size-lg);
    font-weight: 700;
    color: var(--color-gray-900);
    margin-left: var(--spacing-2);
  }

  .pros-cons {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--spacing-4);
    margin-bottom: var(--spacing-4);
  }

  @media (min-width: 640px) {
    .pros-cons {
      grid-template-columns: 1fr 1fr;
    }
  }

  .pros h3, .cons h3 {
    display: flex;
    align-items: center;
    gap: var(--spacing-2);
    font-size: var(--font-size-sm);
    font-weight: 600;
    margin-bottom: var(--spacing-2);
  }

  .pros h3 { color: #059669; }
  .cons h3 { color: #dc2626; }

  .pros h3 svg, .cons h3 svg {
    width: 16px;
    height: 16px;
  }

  .pros ul, .cons ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .pros li, .cons li {
    font-size: var(--font-size-sm);
    color: var(--color-gray-700);
    padding: var(--spacing-1) 0;
    padding-left: var(--spacing-5);
    position: relative;
  }

  .pros li::before {
    content: '+';
    position: absolute;
    left: 0;
    color: #059669;
    font-weight: 700;
  }

  .cons li::before {
    content: '-';
    position: absolute;
    left: 0;
    color: #dc2626;
    font-weight: 700;
  }

  .verdict {
    background: white;
    border-radius: var(--radius-lg);
    padding: var(--spacing-4);
    margin-bottom: var(--spacing-4);
  }

  .verdict h3 {
    font-size: var(--font-size-sm);
    font-weight: 600;
    color: var(--color-gray-700);
    margin-bottom: var(--spacing-2);
  }

  .verdict p {
    font-size: var(--font-size-base);
    color: var(--color-gray-700);
    margin: 0;
    line-height: 1.6;
  }

  .buy-button {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: var(--spacing-2);
    width: 100%;
    padding: var(--spacing-4);
    background: var(--color-accent-500);
    color: white;
    border-radius: var(--radius-lg);
    font-weight: 600;
    font-size: var(--font-size-base);
    transition: all var(--transition-fast);
  }

  .buy-button:hover {
    background: var(--color-accent-600);
    transform: translateY(-2px);
    box-shadow: var(--shadow-lg);
  }

  .buy-button svg {
    width: 20px;
    height: 20px;
  }

  .buy-button .arrow {
    margin-left: auto;
  }

  .share-section {
    margin-top: var(--spacing-10);
    padding-top: var(--spacing-8);
    border-top: 1px solid var(--color-gray-200);
  }

  .share-label {
    font-size: var(--font-size-sm);
    font-weight: 600;
    color: var(--color-gray-700);
    margin-bottom: var(--spacing-4);
  }

  .share-buttons {
    display: flex;
    flex-wrap: wrap;
    gap: var(--spacing-3);
  }

  .share-btn {
    display: inline-flex;
    align-items: center;
    gap: var(--spacing-2);
    padding: var(--spacing-2) var(--spacing-4);
    border-radius: var(--radius-lg);
    font-size: var(--font-size-sm);
    font-weight: 500;
    transition: all var(--transition-fast);
    border: none;
    cursor: pointer;
  }

  .share-btn svg {
    width: 18px;
    height: 18px;
  }

  .share-facebook { background: #1877f2; color: white; }
  .share-facebook:hover { background: #166fe5; }
  .share-twitter { background: #000; color: white; }
  .share-twitter:hover { background: #333; }
  .share-copy { background: var(--color-gray-100); color: var(--color-gray-700); }
  .share-copy:hover { background: var(--color-gray-200); }
  .share-copy.copied { background: var(--color-primary-100); color: var(--color-primary-700); }

  :global([data-theme="dark"]) .breadcrumbs { background: #1e293b; }
  :global([data-theme="dark"]) .breadcrumbs li { color: #64748b; }
  :global([data-theme="dark"]) .breadcrumbs a { color: #94a3b8; }
  :global([data-theme="dark"]) .breadcrumbs a:hover { color: var(--color-primary-400); }
  :global([data-theme="dark"]) .breadcrumbs li[aria-current="page"] { color: #f8fafc; }

  :global([data-theme="dark"]) .product-summary {
    background: linear-gradient(135deg, #1e293b 0%, rgba(6, 182, 212, 0.1) 100%);
    border-color: #334155;
  }

  :global([data-theme="dark"]) .product-name { color: #f8fafc; }
  :global([data-theme="dark"]) .rating-number { color: #cbd5e1; }
  :global([data-theme="dark"]) .product-price { border-color: #334155; }
  :global([data-theme="dark"]) .price-value { color: #f8fafc; }
  :global([data-theme="dark"]) .pros li, :global([data-theme="dark"]) .cons li { color: #cbd5e1; }
  :global([data-theme="dark"]) .verdict { background: #0f172a; }
  :global([data-theme="dark"]) .verdict h3, :global([data-theme="dark"]) .verdict p { color: #cbd5e1; }
  :global([data-theme="dark"]) .star-empty { color: #475569; }
  :global([data-theme="dark"]) .share-section { border-top-color: #334155; }
  :global([data-theme="dark"]) .share-label { color: #cbd5e1; }
  :global([data-theme="dark"]) .share-copy { background: #334155; color: #cbd5e1; }
  :global([data-theme="dark"]) .share-copy:hover { background: #475569; }
</style>

<script>
  document.querySelectorAll('.share-copy').forEach(button => {
    button.addEventListener('click', async () => {
      const url = button.getAttribute('data-url');
      if (url) {
        try {
          await navigator.clipboard.writeText(url);
          button.classList.add('copied');
          const originalText = button.innerHTML;
          button.innerHTML = '<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><polyline points="20 6 9 17 4 12"/></svg>Kopierad!';
          setTimeout(() => {
            button.classList.remove('copied');
            button.innerHTML = originalText;
          }, 2000);
        } catch (err) {
          console.error('Failed to copy:', err);
        }
      }
    });
  });
</script>
